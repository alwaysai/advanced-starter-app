{
  "scripts": {
    "start": "python app.py"
  },
  "models": {
    "alwaysai/mobilenet_ssd": 5
  },
  "app_configurations": {
    "video_stream": {
      "mode": "USB",
      "arg": 0
    },
    "inference": {
      "mode": "INFERENCE",
      "confidence": 0.5,
      "overlap_threshold": 0.3,
      "labels": ["person"]
    },
    "tracker": {
      "max_distance": 100,
      "deregister_frames": 30,
      "min_inertia": 6
    },
    "video_writer": {
      "enable": true,
      "output_path": "output.avi",
      "fps": 30,
      "codec": "MJPG",
      "chunk_duration_s": 30
    }
  },
  "analytics": {
    "enable_file_publish": true
  }
}
